}

.feature-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1rem;
    border-radius: 12px;
    transition: var(--transition);
}

.feature-item:hover {
    background: rgba(62, 146, 204, 0.05);
    transform: translateX(5px);
}

.feature-icon {
    width: 40px;
    height: 40px;
    background: var(--light-gray);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
    flex-shrink: 0;
}

.ai-demo {
    background: var(--white);
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-soft);
    position: relative;
    overflow: hidden;
}

.ai-demo::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(10, 36, 99, 0.05) 0%, rgba(62, 146, 204, 0.05) 100%);
    z-index: 1;
}

.ai-visualization {
    position: relative;
    z-index: 2;
    height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.neural-network {
    position: relative;
    width: 150px;
    height: 100px;
}

.node {
    position: absolute;
    width: 20px;
    height: 20px;
    background: var(--gradient-accent);
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
}

.node:nth-child(1) { top: 0; left: 0; animation-delay: 0s; }
.node:nth-child(2) { top: 40px; left: 65px; animation-delay: 0.5s; }
.node:nth-child(3) { top: 0; right: 0; animation-delay: 1s; }

.connection {
    position: absolute;
    height: 2px;
    background: var(--accent-teal);
    opacity: 0.6;
    animation: flow 3s ease-in-out infinite;
}

.connection:nth-child(4) {
    top: 10px;
    left: 20px;
    width: 45px;
    transform: rotate(45deg);
    animation-delay: 0s;
}

.connection:nth-child(5) {
    top: 50px;
    left: 65px;
    width: 45px;
    transform: rotate(-45deg);
    animation-delay: 1.5s;
}

@@keyframes flow {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 0.8; }
}

.tech-item {
    padding: 1.5rem;
    background: var(--white);
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-soft);
    transition: var(--transition);
    cursor: pointer;
}

.tech-item:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-hover);
}

.tech-icon {
    width: 60px;
    height: 60px;
    background: var(--gradient-accent);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1rem;
    font-size: 1.5rem;
    color: var(--white);
}

.tech-name {
    font-size: 14px;
    font-weight: 600;
    color: var(--primary-blue);
    display: block;
}

@@media (max-width: 768px) {
    .hero-title {
        font-size: 2.5rem;
    }
    
    .hero-subtitle {
        font-size: 1.2rem;
    }
    
    .tech-item {
        padding: 1rem;
    }
    
    .tech-icon {
        width: 50px;
        height: 50px;
        font-size: 1.2rem;
    }
}
</style>
